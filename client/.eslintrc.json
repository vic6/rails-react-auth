{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "rules": {
   "react/prop-types": 0,
   "react/prefer-stateless-function": "off",
   "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
 },
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "DEBUG": false
  }
}
